{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.colortouch.crm",
  "productName": "ColorTouch CRM",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/**/*",
    ".next/standalone/**/*",
    ".next/static/**/*",
    "public/**/*",
    "node_modules/.prisma/**/*",
    "prisma/colortouch.db"
  ],
  "extraResources": [
    {
      "from": "node_modules/.prisma",
      "to": "app/node_modules/.prisma"
    },
    {
      "from": "prisma/colortouch.db",
      "to": "prisma/colortouch.db"
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "asar": false,
  "win": {
    "target": ["portable"],
    "icon": "build/icons/icons/win/icon.ico",
    "signAndEditExecutable": false
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build/icons/icons/png/512x512.png"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "build/icons/icons/png/512x512.png"
  }
}
